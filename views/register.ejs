<!doctype html>
<html lang="en">

  <% include ./partials/head %>
  <body class="text-center">
    <% include ./partials/header %>
    <div class = "container">
      <form class="form-signin" id="form-register">
        <img class="mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h1 class="h3 mb-3 font-weight-normal">Ingresa tus datos</h1>

        <label for="inputPassword" class="sr-only">Nombre</label>
        <input type="text" id="name" class="form-control" placeholder="Nombre" required autofocus>
        <label for="inputUser" class="sr-only">Username</label>
        <input type="text" id="username" class="form-control" placeholder="Username" required>
        <label for="inputPassword" class="sr-only">Password</label>
        <input type="password" id="password" class="form-control" placeholder="Password" required>

        <button class="btn btn-lg btn-primary btn-block" onclick="registerUser()">Registrarse</button>

      </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
