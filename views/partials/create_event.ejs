<div class="modal fade" id="modal_create_event" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Crear Evento</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form class="form-signin" action = "/events" method="POST" >
          <input name="name" type="text" id="name" class="form-control" placeholder="Nombre" required autofocus>
          <select class="form-control" id="category" name="category" required>
            <option>Conferencia</option>
            <option>Seminario</option>
            <option>Congreso</option>
            <option>Curso</option>
          </select>
          <input name="place" type="text" id="place" class="form-control" placeholder="Lugar" required>
          <input name="address" type="text" id="address" class="form-control" placeholder="Direccion" required>
          <input name="event_starts" id="event_starts" class="form-control" type="date" placeholder="Fecha de Inicio" required>
          <input name="event_ends" id="event_ends" class="form-control" type="date" placeholder="Fecha de fin" required>
          <button class="btn btn-lg btn-primary btn-block" type="submit">Crear</button>
        </form>
      </div>
    </div>
  </div>
</div>
